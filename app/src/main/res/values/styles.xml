<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconSize">60dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="OutlinedButton.WithText" parent="OutlinedButton">
        <item name="android:textSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="iconPadding">15dp</item>
    </style>

    <style name="BigLaunchButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="icon">@drawable/baseline_arrow_right_24</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">300dp</item>
        <item name="android:maxWidth">290dp</item>
        <item name="android:maxHeight">290dp</item>
    </style>
    
    <style name="ChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="rippleColor">@color/chip_background</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DialogFragmentCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="DialogFragmentButtonStyle" parent="@style/OutlinedButton.WithText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>